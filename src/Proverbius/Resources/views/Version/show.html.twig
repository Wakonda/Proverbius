{% extends generic_layout %}

{% block head_title %}Admin Version{% endblock %}
{% block main_title %}Administration - Version{% endblock %}

{% block main_content %}
	<table class="admin_show">
		<tr>
			<th>Numéro de version</th>
			<td>{{ entity.versionNumber }}</td>
		</tr>
		<tr>
			<th>Date de sortie</th>
			<td>{{ entity.releaseDate }}</td>
		</tr>
		<tr>
			<th>Fichier</th>
			<td>
				<iframe src="{{ app.request_stack.currentrequest.basepath }}/photo/version/{{ entity.file }}" width="100%" height="500"></iframe>			
			</td>
		</tr>
	</table>
	<hr>
	<a href="{{ path('versionadmin_edit', { 'id' : entity.id }) }}"><i class="fa fa-edit"></i> Modifier</a> - <a href="{{ path('versionadmin_new') }}"><i class="fa fa-plus-square"></i> Créer</a>
{% endblock %}